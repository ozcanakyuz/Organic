@model List<Blog>

@{
	ViewData["Title"] = "BlogList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid py-4">
	<div class="row">
		<div class="col-12" style="padding-left:18rem;">
			<div class="card mb-4">
				<div class="card-header pb-0">
					<h6>Blog LIST</h6>
				</div>
				<div class="card-body px-0 pt-0 pb-2">
					<div class="table-responsive p-0">
						<table class="table align-items-center mb-0">
							<thead>
								<tr>
									<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
									<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Title & Category Title</th>
									<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Created At</th>
									<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Description</th>
									<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Delete</th>
									<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Edit</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model)
								{
									<tr>
										<td>
											<div class="d-flex px-2 py-1">
												<div class="d-flex flex-column justify-content-center">
													<h6 class="mb-0 text-sm">@item.BlogId</h6>
												</div>
											</div>
										</td>
										<td>
											<div class="d-flex px-2 py-1">
												<div>
													<img src="@item.ImageUrl" class="avatar avatar-sm me-3" alt="BlogImg">
												</div>
												<div class="d-flex flex-column justify-content-center">
													<h6 class="mb-0 text-sm">@item.Title</h6>
													<p class="text-xs text-secondary mb-0">@item.CategoryTitle</p>
												</div>
											</div>
										</td>
										<td>
											<p class="text-xs font-weight-bold mb-0">@item.CreatedAt</p>
										</td>
										<td>
											<p class="text-xs font-weight-bold mb-0">@item.Description</p>
										</td>
										<td class="align-middle text-center text-sm">
											<a href="/Blogs/DeleteBlog/@item.BlogId" class="btn btn-danger font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Delete Blog">
												Delete
											</a>
										</td>
										<td class="align-middle text-center text-sm">
											<a href="/Blogs/UpdateBlog/@item.BlogId" class="btn btn-success font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit Blog">
												Edit
											</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Blogs/CreateBlog/" class="btn btn-primary m-2">Add New Blog</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


