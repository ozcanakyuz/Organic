@model GetByIdAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12" style="padding-left:18rem;">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Edit About Table</h6>
                </div>
                <div class="card-body px-2 pt-2 pb-2">

                    <form method="post">
                        <input type="hidden" asp-for="AboutId" />
                        <label>About Name</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <br />
                        <label>Description</label>
                        <input type="text" asp-for="Description" class="form-control" />
                        <br />
                        <label>Image</label>
                        <input type="text" asp-for="Icon" class="form-control" />
                        <br />

                        <button class="btn btn-primary">Edit About</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


