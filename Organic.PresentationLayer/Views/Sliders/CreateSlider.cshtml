@model CreateSliderDto

@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12" style="padding-left:18rem;">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Create Slider Table</h6>
                </div>
                <div class="card-body px-2 pt-2 pb-2">

                    <form method="post">
                        <label>Slider Name</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <br />

                        <label>Image</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                        <br />

                        <button class="btn btn-primary">Create Slider</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


